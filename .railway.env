# Railway Build Configuration
# This file forces Railway to use our custom nixpacks configuration

# Disable Railway's automatic package manager detection
NIXPACKS_NO_DEFAULT_PROVIDERS=1

# Force use of our custom nixpacks.toml
NIXPACKS_CONFIG_FILE=nixpacks.toml

# Disable cache to avoid conflicts
NIXPACKS_NO_CACHE=1

# Yarn configuration
YARN_ENABLE_TELEMETRY=0
YARN_ENABLE_GLOBAL_CACHE=false

# Node environment
NODE_ENV=production
